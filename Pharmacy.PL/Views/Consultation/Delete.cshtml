@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Delete Consultation";
}

<div class="container mt-5">
    <h2>Are you sure you want to delete this consultation?</h2>

    <dl class="row">
        <dt class="col-sm-3">Patient Name</dt>
        <dd class="col-sm-9">@Model.PatientName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time.ToString(@"hh\:mm")</dd>

        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@Model.Status</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-link">Cancel</a>
    </form>
</div>