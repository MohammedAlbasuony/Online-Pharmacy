@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Delete Consultation";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded border-danger">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body">
            <p class="fs-5 fw-semibold text-danger">Are you sure you want to delete this consultation?</p>

            <dl class="row">
                <dt class="col-sm-3 fw-semibold">Patient Name</dt>
                <dd class="col-sm-9">@Model.PatientName</dd>

                <dt class="col-sm-3 fw-semibold">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3 fw-semibold">Time</dt>
                <dd class="col-sm-9">@Model.Time.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3 fw-semibold">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3 fw-semibold">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end gap-2">
                    <button type="submit" class="btn btn-danger shadow">Delete</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
