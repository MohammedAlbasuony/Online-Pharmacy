@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "New Consultation";
}

<style>
    .fade-transition {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.6s ease, transform 0.6s ease;
    }

        .fade-transition.show {
            opacity: 1;
            transform: translateY(0);
        }

    .form-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: #6c757d;
        pointer-events: none;
    }

    .input-with-icon {
        position: relative;
    }

        .input-with-icon input,
        .input-with-icon select {
            padding-left: 2.5rem;
        }

    .form-control:focus + .form-icon,
    .form-select:focus + .form-icon {
        color: #0d6efd;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 3px rgba(13, 118, 255, 0.25);
        border-color: #0d6efd;
    }

    .btn-lg {
        min-width: 120px;
    }
</style>

@section Scripts {
    <script>
        window.addEventListener('DOMContentLoaded', () => {
            const animatedCard = document.querySelector('.fade-transition');
            if (animatedCard) {
                setTimeout(() => {
                    animatedCard.classList.add('show');
                }, 100);
            }
        });
        document.getElementById("patientName").addEventListener("change", function() {
            // Update the hidden PatientId field when a patient is selected
            var selectedPatientId = this.value;
            document.getElementById("PatientId").value = selectedPatientId;
        });
    </script>
}

<div class="container mt-5">
    <div class="card border-0 shadow-lg rounded-4 fade-transition">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center rounded-top-4 py-3 px-4">
            <h4 class="mb-0 fw-bold"><i class="bi bi-chat-left-dots me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3 fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body px-4 py-4">
            <form asp-action="Create" novalidate method="post">
                <div class="row g-4">

                    <div class="col-md-6">
                        <label asp-for="PatientId" class="form-label fw-medium">Patient Name</label>
                        <div class="input-with-icon">
                            <i class="bi bi-person form-icon" aria-hidden="true"></i>
                            <select id="patientName" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Select Patient --</option>
                                @foreach (var patient in ViewBag.Patients as SelectList)
                                {
                                    <option value="@patient.Value">@patient.Text</option>
                                }
                            </select>
                        </div>
                        <span asp-validation-for="PatientId" class="text-danger small d-block mt-1"></span>

                        <!-- Hidden field to store PatientID -->
                        <input type="hidden" id="PatientId" name="PatientId" />
                    </div>


                    <div class="col-md-3">
                        <label asp-for="Date" class="form-label fw-medium">Date</label>
                        <div class="input-with-icon">
                            <i class="bi bi-calendar-date form-icon" aria-hidden="true"></i>
                            <input asp-for="Date" type="date" class="form-control rounded-3 shadow-sm" />
                        </div>
                        <span asp-validation-for="Date" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Time" class="form-label fw-medium">Time</label>
                        <div class="input-with-icon">
                            <i class="bi bi-clock form-icon" aria-hidden="true"></i>
                            <input asp-for="Time" type="time" class="form-control rounded-3 shadow-sm" />
                        </div>
                        <span asp-validation-for="Time" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label fw-medium">Consultation Type</label>
                        <div class="input-with-icon">
                            <i class="bi bi-list-ul form-icon" aria-hidden="true"></i>
                            <select asp-for="Type" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationType>()" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Type" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-medium">Status</label>
                        <div class="input-with-icon">
                            <i class="bi bi-flag form-icon" aria-hidden="true"></i>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationStatus>()" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Select Status --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Status" class="text-danger small d-block mt-1"></span>
                    </div>

                </div>

                <div class="d-flex justify-content-end gap-3 mt-5">
                    <button type="submit" class="btn btn-success btn-lg rounded-pill px-4 shadow-sm">
                        <i class="bi bi-plus-circle me-1"></i> Create
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
