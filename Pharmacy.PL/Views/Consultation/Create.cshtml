@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Create New Consultation";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body">
            <form asp-action="Create" novalidate>
                <div class="mb-3">
                    <label asp-for="PatientName" class="form-label fw-semibold"></label>
                    <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                    <span asp-validation-for="PatientName" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Date" class="form-label fw-semibold"></label>
                    <input asp-for="Date" type="date" class="form-control" />
                    <span asp-validation-for="Date" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Time" class="form-label fw-semibold"></label>
                    <input asp-for="Time" type="time" class="form-control" />
                    <span asp-validation-for="Time" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Type" class="form-label fw-semibold"></label>
                    <select asp-for="Type" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationType>()" class="form-select">
                        <option value="">-- Select Type --</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Status" class="form-label fw-semibold"></label>
                    <select asp-for="Status" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationStatus>()" class="form-select">
                        <option value="">-- Select Status --</option>
                    </select>
                    <span asp-validation-for="Status" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-success shadow">Create</button>
                    <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
