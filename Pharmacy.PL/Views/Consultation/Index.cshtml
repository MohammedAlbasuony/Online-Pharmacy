@model IEnumerable<Pharmacy.DAL.Entity.Consultation>

@{
    ViewData["Title"] = "Consultations";
}

<div class="container mt-5">
    <h2 class="mb-4">@ViewData["Title"]</h2>

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-primary">New Consultation</a>
        <a asp-action="Upcoming" class="btn btn-outline-info ml-2">Upcoming</a>
        <a asp-action="Past" class="btn btn-outline-secondary ml-2">Past</a>
    </div>

    @if (!Model.Any())
    {
        <p class="text-muted">No consultations found.</p>
    }
    else
    {
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Patient</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Type</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                        <td>@item.Date.ToString("MMM dd, yyyy")</td>
                        @item.Time.ToString(@"hh\:mm")
                        <td>@Html.DisplayFor(modelItem => item.Type)</td>
                        <td>
                            <span class="badge @(item.Status == Pharmacy.DAL.Entity.ConsultationStatus.Scheduled? "badge-success" : "badge-secondary")">
                                @Html.DisplayFor(modelItem => item.Status)
                            </span>
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>