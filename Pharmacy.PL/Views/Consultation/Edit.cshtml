@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Edit Consultation";
}

<style>
    .input-with-icon {
        position: relative;
    }

    .form-icon {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: #6c757d;
        pointer-events: none;
        font-size: 1rem;
    }

    .input-with-icon input,
    .input-with-icon select {
        padding-left: 2.5rem !important;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 3px rgba(255, 193, 7, 0.25);
        border-color: #ffc107;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h4 class="mb-0 fw-bold"><i class="bi bi-pencil-square me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm rounded-pill px-3 fw-semibold">
                <i class="bi bi-arrow-left"></i> Back
            </a>
        </div>

        <div class="card-body px-4 py-4">
            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="row g-4">
                    <div class="col-md-6">
                        <label asp-for="PatientName" class="form-label fw-medium">Patient Name</label>
                        <div class="input-with-icon">
                            <i class="bi bi-person form-icon"></i>
                            <input asp-for="PatientName" class="form-control rounded-3 shadow-sm" readonly />
                        </div>
                        <span asp-validation-for="PatientName" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Date" class="form-label fw-medium">Date</label>
                        <div class="input-with-icon">
                            <i class="bi bi-calendar-date form-icon"></i>
                            <input asp-for="Date" type="date" class="form-control rounded-3 shadow-sm" />
                        </div>
                        <span asp-validation-for="Date" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="Time" class="form-label fw-medium">Time</label>
                        <div class="input-with-icon">
                            <i class="bi bi-clock form-icon"></i>
                            <input asp-for="Time" type="time" class="form-control rounded-3 shadow-sm" />
                        </div>
                        <span asp-validation-for="Time" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Type" class="form-label fw-medium">Consultation Type</label>
                        <div class="input-with-icon">
                            <i class="bi bi-list-ul form-icon"></i>
                            <select asp-for="Type" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationType>()" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Select Type --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Type" class="text-danger small d-block mt-1"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Status" class="form-label fw-medium">Status</label>
                        <div class="input-with-icon">
                            <i class="bi bi-flag form-icon"></i>
                            <select asp-for="Status" asp-items="Html.GetEnumSelectList<Pharmacy.DAL.Entity.ConsultationStatus>()" class="form-select rounded-3 shadow-sm">
                                <option value="">-- Select Status --</option>
                            </select>
                        </div>
                        <span asp-validation-for="Status" class="text-danger small d-block mt-1"></span>
                    </div>
                </div>

                <div class="d-flex justify-content-end gap-3 mt-5">
                    <button type="submit" class="btn btn-warning text-white btn-lg rounded-pill px-4 shadow-sm">
                        <i class="bi bi-check2-circle me-1"></i> Update
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg rounded-pill px-4">
                        <i class="bi bi-x-circle me-1"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
