@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Consultation Details";
}

<div class="container mt-5">
    <h2>@ViewData["Title"]</h2>

    <dl class="row">
        <dt class="col-sm-3">Patient Name</dt>
        <dd class="col-sm-9">@Model.PatientName</dd>

        <dt class="col-sm-3">Date</dt>
        <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

        <dt class="col-sm-3">Time</dt>
        <dd class="col-sm-9">@Model.Time.ToString(@"hh\:mm")


        <dt class="col-sm-3">Type</dt>
        <dd class="col-sm-9">@Model.Type</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            <span class="badge @(Model.Status == Pharmacy.DAL.Entity.ConsultationStatus.Scheduled? "badge-success" : "badge-secondary")">
                @Model.Status
            </span>
        </dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Edit</a>
    <a asp-action="Index" class="btn btn-link">Back to List</a>
</div>