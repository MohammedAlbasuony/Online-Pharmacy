@model Pharmacy.DAL.Entity.Consultation

@{
    ViewData["Title"] = "Consultation Details";
}

<div class="container mt-5">
    <div class="card shadow-sm rounded">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">Back to List</a>
        </div>

        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 text-muted">Patient Name</dt>
                <dd class="col-sm-9">@Model.PatientName</dd>

                <dt class="col-sm-3 text-muted">Date</dt>
                <dd class="col-sm-9">@Model.Date.ToString("MMMM dd, yyyy")</dd>

                <dt class="col-sm-3 text-muted">Time</dt>
                <dd class="col-sm-9">@Model.Time.ToString(@"hh\:mm")</dd>

                <dt class="col-sm-3 text-muted">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3 text-muted">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge
                        @(Model.Status == Pharmacy.DAL.Entity.ConsultationStatus.Scheduled ? "bg-warning text-dark" :
                          Model.Status == Pharmacy.DAL.Entity.ConsultationStatus.Completed ? "bg-success" :
                          Model.Status == Pharmacy.DAL.Entity.ConsultationStatus.Cancelled ? "bg-danger" : "bg-secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>

        <div class="card-footer d-flex justify-content-end gap-2">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-warning">Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
        </div>
    </div>
</div>
