@model Pharmacy.BLL.ViewModels.MedicineVM.UpdateMedicineVM
@{
    ViewData["Title"] = "Medicine Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #74ebd5;
            --secondary-color: #9face6;
            --danger-color: #e74a3b;
            --warning-color: #f6c23e;
            --light-bg: #f8f9fc;
            --card-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            --card-shadow-hover: 0 15px 30px rgba(0, 0, 0, 0.12);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-bg);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .details-container {
            max-width: 800px;
            margin: 0 auto;
            width: 100%;
        }

        .details-card {
            border-radius: 16px;
            border: none;
            overflow: hidden;
            transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.1);
            box-shadow: var(--card-shadow);
            background: white;
            position: relative;
            padding: 2rem;
        }

            .details-card:hover {
                transform: translateY(-5px);
                box-shadow: var(--card-shadow-hover);
            }

            .details-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 6px;
                height: 100%;
                background: linear-gradient(to bottom, var(--primary-color), var(--secondary-color));
                transition: all 0.3s ease;
            }

        .details-header {
            text-align: center;
            margin-bottom: 2rem;
            position: relative;
        }

            .details-header h2 {
                font-weight: 700;
                color: var(--primary-color);
                margin-bottom: 0.5rem;
                position: relative;
                display: inline-block;
            }

                .details-header h2::after {
                    content: '';
                    position: absolute;
                    bottom: -10px;
                    left: 50%;
                    transform: translateX(-50%);
                    width: 80px;
                    height: 4px;
                    background: linear-gradient(to right, var(--primary-color), var(--secondary-color));
                    border-radius: 2px;
                }

        .details-image {
            max-height: 300px;
            width: 100%;
            object-fit: contain;
            border-radius: 12px;
            margin-bottom: 2rem;
            display: block;
        }

        .details-list {
            list-style: none;
            padding-left: 0;
        }

            .details-list li {
                padding: 1rem;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
                display: flex;
                justify-content: space-between;
            }

                .details-list li strong {
                    font-weight: 600;
                    color: #2c3e50;
                }

                .details-list li span {
                    color: #6c757d;
                    text-align: right;
                }

        .btn-back {
            background-color: var(--secondary-color);
            color: white;
            border-radius: 10px;
            padding: 12px 30px;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            display: inline-flex;
            align-items: center;
            justify-content: center;
            margin-top: 2rem;
        }

            .btn-back:hover {
                background-color: #17a673;
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(28, 200, 138, 0.3);
                color: white;
            }

        .badge-prescription {
            background-color: var(--warning-color);
            color: #212529;
        }

        @@media (max-width: 768px) {
            .details-container {
                padding: 0 15px;
            }

            .details-list li {
                flex-direction: column;
            }

                .details-list li span {
                    text-align: left;
                    margin-top: 0.5rem;
                }
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="details-container animate__animated animate__fadeIn">
            <div class="details-card animate__animated animate__fadeIn animate__delay-1s">
                <div class="details-header animate__animated animate__fadeInDown">
                    <h2><i class="bi bi-capsule-pill me-2"></i>@Model.Name</h2>
                </div>

                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Model.ImageUrl" alt="@Model.Name" class="details-image" />
                }

                <ul class="details-list">
                    <li>
                        <strong>Category:</strong>
                        <span>@Model.Category</span>
                    </li>
                    <li>
                        <strong>Price:</strong>
                        <span>@Model.Price EGP</span>
                    </li>
                    <li>
                        <strong>Stock Quantity:</strong>
                        <span>@Model.StockQuantity</span>
                    </li>
                    <li>
                        <strong>Manufacturer:</strong>
                        <span>@Model.Manufacturer</span>
                    </li>
                    <li>
                        <strong>Expiry Date:</strong>
                        <span>@Model.ExpiryDate.ToShortDateString()</span>
                    </li>
                    <li>
                        <strong>Requires Prescription:</strong>
                        <span>
                            @if (Model.RequiresPrescription)
                            {
                                <span class="badge badge-prescription rounded-pill">
                                    <i class="bi bi-file-earmark-medical me-1"></i> Yes
                                </span>
                            }
                            else
                            {
                                <span>No</span>
                            }
                        </span>
                    </li>
                    <li>
                        <strong>Uses:</strong>
                        <span>@Model.Uses</span>
                    </li>
                    <li>
                        <strong>Side Effects:</strong>
                        <span>@Model.SideEffects</span>
                    </li>
                </ul>

                <div class="text-center">
                    <a asp-action="GetAllMedicine" class="btn btn-back">
                        <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>