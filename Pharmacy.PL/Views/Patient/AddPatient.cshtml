@model Hospital_Mangment_System_BLL.View_model.patientVM.CreatePatientVM

@{
    ViewData["Title"] = "Add Patient";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <h3 class="mb-0"><i class="bi bi-person-plus-fill me-2"></i> Add New Patient</h3>
        </div>
        <div class="card-body p-4">
            <form asp-action="AddPatient" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-semibold"></label>
                    <input asp-for="Name" class="form-control" placeholder="Enter patient's full name" />
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="MedicalHistory" class="form-label fw-semibold"></label>
                    <textarea asp-for="MedicalHistory" class="form-control" rows="4" placeholder="Enter medical history..."></textarea>
                    <span asp-validation-for="MedicalHistory" class="text-danger small"></span>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="GetAllPatient" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-check-circle-fill"></i> Submit
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
