@model Hospital_Mangment_System_BLL.View_model.patientVM.CreatePatientVM

@{
    ViewData["Title"] = "Add Patient";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-dark">Add New Patient</h2>

    <!-- Card Container with Modern Shadow and Hover Effect -->
    <div class="card shadow-3d rounded-5 p-5 hover-card">
        <form asp-action="AddPatient" method="post" class="needs-validation" novalidate>

            <!-- Patient Name Input -->
            <div class="mb-4">
                <label asp-for="Name" class="form-label text-dark">Patient Name</label>
                <div class="input-with-icon">
                    <i class="bi bi-person form-icon"></i>
                    <input asp-for="Name" class="form-control form-control-lg p-4 rounded-3 border-0 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary transition-all duration-300" placeholder="Enter patient's full name" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <!-- Medical History Input -->
            <div class="mb-4">
                <label asp-for="MedicalHistory" class="form-label text-dark">Medical History</label>
                <div class="input-with-icon">
                    <i class="bi bi-journal-medical form-icon"></i>
                    <textarea asp-for="MedicalHistory" class="form-control form-control-lg p-4 rounded-3 border-0 shadow-sm focus:outline-none focus:ring-2 focus:ring-primary transition-all duration-300" rows="5" placeholder="Enter medical history..."></textarea>
                </div>
                <span asp-validation-for="MedicalHistory" class="text-danger"></span>
            </div>

            <!-- Buttons Container -->
            <div class="d-flex justify-content-between align-items-center mt-3">
                <a asp-action="GetAllPatient" class="btn btn-outline-secondary btn-lg px-5 py-3 rounded-4 shadow-lg hover-button transition-all duration-300">
                    <i class="bi bi-arrow-left-circle"></i> Back
                </a>
                <button type="submit" class="btn btn-success btn-lg px-5 py-3 rounded-4 shadow-lg hover-button transition-all duration-300 ms-3">
                    <i class="bi bi-check-circle-fill"></i> Submit
                </button>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial");
}

<style>
    .input-with-icon {
        position: relative;
    }

    .form-icon {
        position: absolute;
        top: 50%;
        left: 12px;
        transform: translateY(-50%);
        color: #6c757d;
        pointer-events: none;
        font-size: 1.2rem;
    }

    .input-with-icon input,
    .input-with-icon textarea {
        padding-left: 3rem !important;
    }

    .form-control:focus,
    .form-select:focus {
        box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.25);
        border-color: #0d6efd;
    }

    /* Hover effect for the card */
    .hover-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease-in-out;
    }

    /* Button hover effect */
    .hover-button:hover {
        transform: scale(1.05);
        box-shadow: 0 6px 15px rgba(0, 0, 0, 0.15);
        transition: all 0.3s ease-in-out;
    }

    /* 3D shadow for the card */
    .shadow-3d {
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1), 0 6px 10px rgba(0, 0, 0, 0.05);
    }
</style>
