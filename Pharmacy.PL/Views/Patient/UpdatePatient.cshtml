@model Hospital_Mangment_System_BLL.View_model.patientVM.UpdatePatientVM

@{
    ViewData["Title"] = "Update Patient";
}

<h2 class="mb-4">Update Patient</h2>

<form asp-action="UpdatePatient" method="post" class="needs-validation" novalidate>
    <input type="hidden" asp-for="PatientID" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MedicalHistory" class="form-label"></label>
        <textarea asp-for="MedicalHistory" class="form-control"></textarea>
        <span asp-validation-for="MedicalHistory" class="text-danger"></span>
    </div>

   

    <button type="submit" class="btn btn-primary">
        <i class="bi bi-save"></i> Update
    </button>
    <a asp-action="GetAllPatient" class="btn btn-secondary ms-2">
        <i class="bi bi-arrow-left"></i> Back
    </a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
