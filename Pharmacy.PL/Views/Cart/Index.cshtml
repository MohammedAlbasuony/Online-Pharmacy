@model List<Pharmacy.DAL.Entity.CartItem>
@{
    ViewData["Title"] = "Your Cart";
    decimal total = Model.Sum(item => item.UnitPrice * item.Quantity);
}

<h2>Your Shopping Cart</h2>
<div class="text-start mt-3">
    <a asp-controller="Medicine" asp-action="GetallMedicine" class="btn btn-secondary">Back to Medicines</a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">Your cart is empty.</div>
}
else
{
    <table class="table table-bordered text-center">
        <thead class="table-light">
            <tr>
                <th>Image</th>
                <th>Medication</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl" width="60" />
                        }
                        else
                        {
                            <span class="text-muted">N/A</span>
                        }
                    </td>
                    <td>@item.MedicationName</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                    <td>@item.Quantity</td>
                    <td>@(item.UnitPrice * item.Quantity)</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-medicationId="@item.MedicationId" class="btn btn-sm btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-end">
        <h4>Total: @total.ToString("C")</h4>
        <a asp-action="ClearCart" class="btn btn-outline-danger">Clear Cart</a>
        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Checkout</a>
    </div>
}
