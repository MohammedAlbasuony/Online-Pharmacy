@model List<Pharmacy.DAL.Entity.CartItem>
@{
    ViewData["Title"] = "Your Cart";
    decimal total = Model.Sum(item => item.UnitPrice * item.Quantity);
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <style>
        :root {
            --primary-color: #74ebd5;
            --secondary-color: #9face6;
            --danger-color: #e74a3b;
            --warning-color: #f6c23e;
            --light-bg: #f8f9fc;
            --card-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            --card-shadow-hover: 0 10px 15px rgba(0, 0, 0, 0.1);
        }

        body {
            font-family: 'Poppins', sans-serif;
            background-color: var(--light-bg);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .cart-container {
            max-width: 1200px;
            margin: 0 auto;
            width: 100%;
            padding: 2rem;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 1rem 0;
            border-bottom: 1px solid rgba(0, 0, 0, 0.05);
        }

        .page-title {
            font-weight: 700;
            color: #2c3e50;
            display: flex;
            align-items: center;
        }

            .page-title i {
                margin-right: 12px;
                font-size: 1.5rem;
                color: var(--primary-color);
            }

        .btn-back {
            background-color: #6c757d;
            color: white;
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 500;
            transition: all 0.2s;
        }

            .btn-back:hover {
                background-color: #5a6268;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
            }

        .empty-cart {
            text-align: center;
            padding: 3rem;
            background: white;
            border-radius: 12px;
            box-shadow: var(--card-shadow);
        }

            .empty-cart i {
                font-size: 3rem;
                color: #adb5bd;
                margin-bottom: 1rem;
            }

        .cart-table {
            width: 100%;
            border-collapse: separate;
            border-spacing: 0;
            margin-bottom: 2rem;
        }

            .cart-table th {
                background-color: var(--primary-color);
                color: white;
                font-weight: 600;
                padding: 1rem;
                text-align: center;
            }

            .cart-table td {
                padding: 1rem;
                background-color: white;
                border-bottom: 1px solid rgba(0, 0, 0, 0.05);
                text-align: center;
                vertical-align: middle;
            }

            .cart-table img {
                width: 70px;
                height: 70px;
                object-fit: cover;
                border-radius: 10px;
            }

        .quantity-controls {
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .quantity-controls button {
                width: 30px;
                height: 30px;
                display: flex;
                align-items: center;
                justify-content: center;
                border: none;
                border-radius: 6px;
                background-color: var(--primary-color);
                color: white;
                cursor: pointer;
                transition: all 0.2s;
            }

                .quantity-controls button:hover {
                    background-color: var(--secondary-color);
                    transform: translateY(-2px);
                }

            .quantity-controls input {
                width: 50px;
                text-align: center;
                margin: 0 0.5rem;
                border: 1px solid #ddd;
                border-radius: 6px;
                padding: 0.25rem;
            }

        .btn-action {
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-weight: 500;
            transition: all 0.2s;
        }

        .btn-danger {
            background-color: var(--danger-color);
            color: white;
        }

            .btn-danger:hover {
                background-color: #c82333;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
            }

        .btn-clear {
            background-color: var(--warning-color);
            color: #212529;
        }

            .btn-clear:hover {
                background-color: #e0a800;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(255, 193, 7, 0.3);
            }

        .btn-checkout {
            background-color: var(--secondary-color);
            color: white;
        }

            .btn-checkout:hover {
                background-color: #17a673;
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(28, 200, 138, 0.3);
            }

        .total-section {
            display: flex;
            justify-content: flex-end;
            align-items: center;
            margin-top: 2rem;
            gap: 1rem;
        }

            .total-section h4 {
                margin-bottom: 0;
                font-weight: 600;
                color: #2c3e50;
            }

        @@media (max-width: 768px) {
            .cart-container {
                padding: 1rem;
            }

            .page-header {
                flex-direction: column;
                align-items: flex-start;
                gap: 1rem;
            }

            .cart-table {
                display: block;
                overflow-x: auto;
            }

            .total-section {
                flex-direction: column;
                align-items: flex-end;
            }
        }
    </style>
</head>
<body>
    <div class="container py-5">
        <div class="cart-container animate__animated animate__fadeIn">
            <div class="page-header">
                <h1 class="page-title">
                    <i class="bi bi-cart-fill"></i> Your Shopping Cart
                </h1>
                <a asp-controller="Medicine" asp-action="GetAllMedicine" class="btn btn-back">
                    <i class="bi bi-arrow-left me-1"></i> Continue Shopping
                </a>
            </div>

            @if (!Model.Any())
            {
                <div class="empty-cart animate__animated animate__fadeIn">
                    <i class="bi bi-cart-x"></i>
                    <h4 class="text-muted">Your cart is empty</h4>
                    <p class="text-muted">Add some items to your cart to get started</p>
                </div>
            }
            else
            {
                <table class="cart-table">
                    <thead>
                        <tr>
                            <th>Image</th>
                            <th>Medication</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="animate__animated animate__fadeIn">
                                <td>
                                    @if (!string.IsNullOrEmpty(item.ImageUrl))
                                    {
                                        <img src="@item.ImageUrl" alt="@item.MedicationName" />
                                    }
                                    else
                                    {
                                        <div class="bg-light p-2 rounded text-center">
                                            <i class="bi bi-image text-muted"></i>
                                        </div>
                                    }
                                </td>
                                <td>@item.MedicationName</td>
                                <td>@item.UnitPrice.ToString("C")</td>
                                <td>
                                    <div class="quantity-controls">
                                        <form method="post" asp-action="DecreaseQuantity" asp-route-medicationId="@item.MedicationId">
                                            <button type="submit" class="btn-action">
                                                <i class="bi bi-dash"></i>
                                            </button>
                                        </form>
                                        <input type="number" value="@item.Quantity" disabled />
                                        <form method="post" asp-action="IncreaseQuantity" asp-route-medicationId="@item.MedicationId">
                                            <button type="submit" class="btn-action">
                                                <i class="bi bi-plus"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                                <td>@((item.UnitPrice * item.Quantity).ToString("C"))</td>
                                <td>
                                    <a asp-action="RemoveFromCart" asp-route-medicationId="@item.MedicationId" class="btn btn-action btn-danger">
                                        <i class="bi bi-trash"></i> Remove
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="total-section">
                    <h4>Total: @total.ToString("C")</h4>
                    <div class="d-flex gap-2">
                        <a asp-action="ClearCart" class="btn btn-action btn-clear">
                            <i class="bi bi-x-circle"></i> Clear Cart
                        </a>
                        <a asp-controller="Cart" asp-action="Checkout" class="btn btn-action btn-checkout">
                            <i class="bi bi-credit-card"></i> Checkout
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>