@model List<Pharmacy.DAL.Entity.CartItem>
@{
    ViewData["Title"] = "Your Cart";
    decimal total = Model.Sum(item => item.UnitPrice * item.Quantity);
}

<!-- Modern Styling -->
<style>
    .cart-container {
        background-color: #f4f7fc;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        margin-top: 3rem;
        max-width: 1200px;
        margin-left: auto;
        margin-right: auto;
    }

    .cart-title {
        font-size: 2.5rem;
        font-weight: 700;
        color: #2D87F0;
        margin-bottom: 2rem;
        text-align: center;
    }

    .cart-table th, .cart-table td {
        padding: 1.2rem;
        font-size: 1rem;
        text-align: center;
        vertical-align: middle;
    }

    .cart-table th {
        background-color: #2D87F0;
        color: #fff;
        font-weight: 600;
    }

    .cart-table td {
        background-color: #fff;
        color: #555;
        border-top: 1px solid #e0e0e0;
    }

    .cart-table img {
        width: 70px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
    }

    .cart-table .btn {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
        border-radius: 8px;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

    .cart-table .btn-danger {
        background-color: #F44336;
        color: white;
    }

        .cart-table .btn-danger:hover {
            background-color: #D32F2F;
            transform: translateY(-2px);
        }

    .cart-table .btn-primary {
        background-color: #2D87F0;
        color: white;
    }

        .cart-table .btn-primary:hover {
            background-color: #1D6ED6;
            transform: translateY(-2px);
        }

    .btn-outline-danger {
        background-color: transparent;
        border: 2px solid #F44336;
        color: #F44336;
    }

        .btn-outline-danger:hover {
            background-color: #F44336;
            color: #fff;
        }

    .total-section {
        margin-top: 3rem;
        font-size: 1.2rem;
        font-weight: 600;
        text-align: right;
    }

        .total-section .btn {
            margin-left: 1rem;
        }

    .empty-cart {
        padding: 2rem;
        text-align: center;
        font-size: 1.2rem;
        background-color: #fff3cd;
        border-radius: 10px;
        color: #856404;
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.1);
    }

    .cart-back-btn {
        display: inline-block;
        margin-top: 1rem;
        background-color: #6c757d;
        color: white;
        padding: 0.75rem 2rem;
        border-radius: 12px;
        font-weight: 600;
        text-transform: uppercase;
        transition: all 0.3s ease;
    }

        .cart-back-btn:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
        }

    .quantity-controls {
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .quantity-controls button {
            padding: 0.5rem;
            font-size: 1.2rem;
            margin: 0 0.5rem;
            cursor: pointer;
            background-color: #2D87F0;
            color: white;
            border: none;
            border-radius: 6px;
            transition: background-color 0.3s;
        }

            .quantity-controls button:hover {
                background-color: #1D6ED6;
            }

        .quantity-controls input {
            width: 60px;
            padding: 0.5rem;
            font-size: 1rem;
            text-align: center;
            border-radius: 6px;
            border: 1px solid #ddd;
            margin-top: 0.25rem;
        }
</style>

<div class="container cart-container">
    <h2 class="cart-title">Your Shopping Cart</h2>

    <div class="text-start mt-3">
        <a asp-controller="Medicine" asp-action="GetallMedicine" class="cart-back-btn">Back to Medicines</a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-cart">
            <p>Your cart is empty. Add some items to your cart!</p>
        </div>
    }
    else
    {
        <table class="table cart-table">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Medication</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" alt="@item.MedicationName" />
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </td>
                        <td>@item.MedicationName</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>
                            <div class="quantity-controls">
                                <form method="post" asp-action="DecreaseQuantity" asp-route-medicationId="@item.MedicationId">
                                    <button type="submit" class="btn btn-warning">-</button>
                                </form>
                               
                                <input type="number" value="@item.Quantity" disabled class="form-control" />
                                <form method="post" asp-action="IncreaseQuantity" asp-route-medicationId="@item.MedicationId">
                                    <button type="submit" class="btn btn-primary">+</button>
                                </form>
                            </div>
                        </td>
                        <td>@(item.UnitPrice * item.Quantity)</td>
                        <td>
                            <a asp-action="RemoveFromCart" asp-route-medicationId="@item.MedicationId" class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-section">
            <h4>Total: @total.ToString("C")</h4>
            <a asp-action="ClearCart" class="btn btn-outline-danger">Clear Cart</a>
            <a asp-controller="Cart" asp-action="Checkout" class="btn btn-primary">Checkout</a>
        </div>
    }
</div>
