@model List<Pharmacy.DAL.Entity.CartItem>

@{
    ViewData["Title"] = "Checkout";
    decimal total = Model.Sum(item => item.UnitPrice * item.Quantity);
}

<!-- Cool Modern Styling -->
<style>
    .checkout-container {
        background: linear-gradient(135deg, #f0f4f8, #e6eef4);
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
        max-width: 1200px;
        margin: 4rem auto;
    }

    .checkout-title {
        font-size: 2.8rem;
        font-weight: 800;
        color: #1e3d58;
        margin-bottom: 2rem;
        text-align: center;
        text-transform: uppercase;
    }

    .table thead {
        background-color: #1e3d58;
        color: #fff;
        font-weight: 700;
    }

    .table th, .table td {
        padding: 1.5rem;
        text-align: center;
        vertical-align: middle;
        font-size: 1.1rem;
    }

    .table td {
        background-color: #fff;
        color: #333;
        border-top: 1px solid #e6e6e6;
    }

    .table img {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        object-fit: cover;
    }

    .form-group label {
        font-size: 1.2rem;
        color: #333;
        font-weight: 600;
    }

    .form-control {
        border-radius: 12px;
        padding: 1rem;
        font-size: 1rem;
        border: 1px solid #ccc;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.05);
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #1e3d58;
        box-shadow: 0 0 8px rgba(30, 61, 88, 0.2);
    }

    .btn {
        padding: 0.75rem 2rem;
        border-radius: 10px;
        font-weight: 700;
        transition: all 0.3s ease;
        cursor: pointer;
    }

    .btn-primary {
        background-color: #1e3d58;
        color: white;
        border: none;
    }

    .btn-primary:hover {
        background-color: #1b3446;
        transform: translateY(-3px);
    }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        border: none;
    }

    .btn-secondary:hover {
        background-color: #5a6268;
        transform: translateY(-3px);
    }

    .total-section {
        margin-top: 3rem;
        font-size: 1.5rem;
        font-weight: 700;
        color: #1e3d58;
        text-align: center;
    }

    .total-section h4 {
        color: #333;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 1rem;
    }

    .empty-cart {
        padding: 2rem;
        text-align: center;
        font-size: 1.2rem;
        background-color: #fff3cd;
        border-radius: 10px;
        color: #856404;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        margin-top: 2rem;
    }
</style>

<div class="container checkout-container">
    <h2 class="checkout-title">Checkout</h2>

    @if (!Model.Any())
    {
        <div class="empty-cart">
            <p>Your cart is empty. Add some items to your cart!</p>
        </div>
    }
    else
    {
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Medication</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MedicationName</td>
                        <td>@item.Quantity</td>
                        <td>@item.UnitPrice.ToString("C")</td>
                        <td>@(item.UnitPrice * item.Quantity)</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="total-section">
            <h4>Total Amount: @total.ToString("C")</h4>
        </div>

        <form asp-action="ProcessCheckout" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group">
                <label for="PaymentMethod">Select Payment Method:</label>
                <select class="form-control" name="PaymentMethod" id="PaymentMethod">
                    <option value="Cash">Cash</option>
                    <option value="Credit Card">Credit Card</option>
                    <option value="PayPal">PayPal</option>
                </select>
            </div>

            <div class="btn-group mt-4">
                <button type="submit" class="btn btn-primary">Confirm and Pay</button>
                <a href="@Url.Action("Index", "Cart")" class="btn btn-secondary">Back to Cart</a>
            </div>
        </form>
    }
</div>
