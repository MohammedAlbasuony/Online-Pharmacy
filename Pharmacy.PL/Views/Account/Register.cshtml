@using Pharmacy.PL.ViewModels
@model RegisterVm
@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "register-page";
}
<section class="section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body p-4 p-md-5">
                        <h3 class="mb-4 text-center">Create Your Account</h3>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger" role="alert">
                                <i class="fas fa-exclamation-circle me-2"></i> @ViewBag.ErrorMessage
                            </div>
                        }

                        <form asp-action="Register" asp-controller="Account" method="post">
                            <div class="row mb-4">
                                <div class="col-md-6 mb-4 mb-md-0">
                                    <label asp-for="Name" class="form-label">First Name</label>
                                    <input asp-for="Name" class="form-control" placeholder="Enter your first name" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label">Email</label>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                           
                            <div class="mb-4">
                                <label asp-for="UserType" class="form-label">I am registering as a</label>
                                <select asp-for="UserType" class="form-select">
                                    <option value="">-- Select User Type --</option>
                                    <option value="Patient">Patient</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Pharmacist">Pharmacist</option>
                                </select>
                                <span asp-validation-for="UserType" class="text-danger"></span>
                            </div>
                            <div class="row mb-4">
                                <div class="col-md-6 mb-4 mb-md-0">
                                    <label asp-for="Password" class="form-label">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                    <div class="form-text">Password must be at least 8 characters and include uppercase, lowercase, number, and special character.</div>
                                </div>
                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm your password" />
                                        <button class="btn btn-outline-secondary toggle-password" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-primary btn-lg">Create Account</button>
                            </div>

                            <div class="text-center">
                                <p>Already have an account? <a href="@Url.Action("Login", "Account")" class="text-decoration-none">Sign In</a> </p>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />
 
}