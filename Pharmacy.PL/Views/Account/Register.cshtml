@using Pharmacy.PL.ViewModels
@model RegisterVm

@{
    ViewData["Title"] = "Register";
    ViewData["BodyClass"] = "register-page";
}

<section class="py-5" style="background: linear-gradient(135deg, #74ebd5, #9face6); min-height: 100vh;">
    <div class="container">
        <div class="row justify-content-center align-items-center">
            <div class="col-md-10 col-lg-8">
                <div class="card shadow-lg border-0 rounded-4" style="backdrop-filter: blur(16px); background-color: rgba(255, 255, 255, 0.15); border: 1px solid rgba(255, 255, 255, 0.3);">
                    <div class="card-body p-5">
                        <h2 class="mb-4 text-center fw-bold text-white">Create Your Account</h2>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger d-flex align-items-center" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <div>@ViewBag.ErrorMessage</div>
                            </div>
                        }

                        <form asp-action="Register" asp-controller="Account" method="post" class="needs-validation" novalidate>
                            <div class="row mb-4">
                                <div class="col-md-12">
                                    <label asp-for="Name" class="form-label text-white">Full Name</label>
                                    <input asp-for="Name" class="form-control rounded-pill" placeholder="John Doe" />
                                    <span asp-validation-for="Name" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Email" class="form-label text-white">Email</label>
                                <input asp-for="Email" class="form-control rounded-pill" placeholder="example@domain.com" />
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="UserType" class="form-label text-white">Registering As</label>
                                <select asp-for="UserType" class="form-select rounded-pill">
                                    <option value="">-- Select User Type --</option>
                                    <option value="Patient">Patient</option>
                                    <option value="Doctor">Doctor</option>
                                    <option value="Pharmacist">Pharmacist</option>
                                </select>
                                <span asp-validation-for="UserType" class="text-danger small"></span>
                            </div>

                            <div class="row mb-4">
                                <div class="col-md-6 mb-3 mb-md-0">
                                    <label asp-for="Password" class="form-label text-white">Password</label>
                                    <div class="input-group">
                                        <input asp-for="Password" class="form-control rounded-start-pill" placeholder="********" />
                                        <button class="btn btn-outline-light toggle-password rounded-end-pill" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                    <div class="form-text text-light">Min. 8 characters, including uppercase, number & symbol.</div>
                                </div>

                                <div class="col-md-6">
                                    <label asp-for="ConfirmPassword" class="form-label text-white">Confirm Password</label>
                                    <div class="input-group">
                                        <input asp-for="ConfirmPassword" class="form-control rounded-start-pill" placeholder="********" />
                                        <button class="btn btn-outline-light toggle-password rounded-end-pill" type="button">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-light btn-lg rounded-pill fw-semibold">Create Account</button>
                            </div>

                            <div class="text-center text-white">
                                <p>
                                    Already have an account?
                                    <a href="@Url.Action("Login", "Account")" class="text-warning fw-bold text-decoration-none">Sign In</a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.querySelectorAll('.toggle-password').forEach(button => {
            button.addEventListener('click', () => {
                const input = button.previousElementSibling;
                const icon = button.querySelector('i');
                const isPassword = input.getAttribute('type') === 'password';
                input.setAttribute('type', isPassword ? 'text' : 'password');
                icon.classList.toggle('fa-eye');
                icon.classList.toggle('fa-eye-slash');
            });
        });
    </script>
}
